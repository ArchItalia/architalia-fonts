# Maintainer: Jonathan Sanfilippo  <jonalinux dot uk at gmail dot com>

pkgname=architalia-fonts
pkgver=1.0
pkgrel=1
pkgdesc="Architalia-live fonts"
arch=('any')
license=('GPL')

package() {
   install -Dm775 Architalia-Mono.eot "$pkgdir/$HOME/.local/share/fonts/Architalia-Mono.eot"
   install -Dm775 Architalia-Mono.otf "$pkgdir/$HOME/.local/share/fonts/Architalia-Mono.otf"
   install -Dm775 Architalia-Mono.ttf "$pkgdir/$HOME/.local/share/fonts/Architalia-Mono.ttf"
   install -Dm775 Architalia-Mono.woff "$pkgdir/$HOME/.local/share/fonts/Architalia-Mono.woff"
   install -Dm775 Architalia-Mono.woff2 "$pkgdir/$HOME/.local/share/fonts/Architalia-Mono.woff2"
   install -Dm775 Architalia-Regular.eot "$pkgdir/$HOME/.local/share/fonts/Architalia-Regular.eot"
   install -Dm775 Architalia-Regular.otf "$pkgdir/$HOME/.local/share/fonts/Architalia-Regular.otf"
   install -Dm775 Architalia-Regular.ttf "$pkgdir/$HOME/.local/share/fonts/Architalia-Regular.ttf"
   install -Dm775 Architalia-Regular.woff "$pkgdir/$HOME/.local/share/fonts/Architalia-Regular.woff"
   install -Dm775 Architalia-Regular.woff2 "$pkgdir/$HOME/.local/share/fonts/Architalia-Regular.woff2"
   install -Dm775 ArchitaliaTextMedium-Regular.eot "$pkgdir/$HOME/.local/share/fonts/ArchitaliaTextMedium-Regular.eot"
   install -Dm775 ArchitaliaTextMedium-Regular.otf "$pkgdir/$HOME/.local/share/fonts/ArchitaliaTextMedium-Regular.otf"
   install -Dm775 ArchitaliaTextMedium-Regular.ttf "$pkgdir/$HOME/.local/share/fonts/ArchitaliaTextMedium-Regular.ttf"
   install -Dm775 ArchitaliaTextMedium-Regular.woff "$pkgdir/$HOME/.local/share/fonts/ArchitaliaTextMedium-Regular.woff"
   install -Dm775 ArchitaliaTextMedium-Regular.woff2 "$pkgdir/$HOME/.local/share/fonts/ArchitaliaTextMedium-Regular.woff2"
}
